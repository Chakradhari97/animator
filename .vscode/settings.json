{
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "search.exclude": {
        "**/coverage/**": true,
        "packages/**/lib/**/*": true,
        "packages/haiku-formats/test/goldens/**": true

{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "lib",
    "paths": {
      "*": [
        "*",
        "lib/*"
      ]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/config/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
